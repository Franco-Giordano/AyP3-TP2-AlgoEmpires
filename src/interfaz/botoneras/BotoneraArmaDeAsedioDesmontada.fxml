<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" focusTraversable="false" scaleX="0.8" scaleY="0.8"
      BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8"
      fx:controller="interfaz.botoneras.BotoneraArmaDeAsedioController">
    <children>
        <GridPane prefHeight="300.0" prefWidth="300.0"
                  style="-fx-background-image:url('/interfaz/recursos/imagenes/brujula.png'); -fx-background-size:stretch;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Polygon fill="#fbefdd" onMouseClicked="#moverArriba" scaleX="0.4" scaleY="1.5" stroke="BLACK"
                         strokeType="INSIDE" GridPane.columnIndex="1">
                    <points>
                        <Double fx:value="-50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="0.0"/>
                        <Double fx:value="-60.0"/>
                    </points>
                </Polygon>
                <Polygon fill="#fbefdd" onMouseClicked="#moverIzquierda" rotate="270.0" scaleX="0.4" scaleY="1.5"
                         stroke="BLACK" strokeType="INSIDE" GridPane.rowIndex="1">
                    <points>
                        <Double fx:value="-50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="0.0"/>
                        <Double fx:value="-60.0"/>
                    </points>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Polygon>
                <Polygon fill="#fbefdd" onMouseClicked="#moverDerecha" rotate="90.0" scaleX="0.4" scaleY="1.5"
                         stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <points>
                        <Double fx:value="-50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="0.0"/>
                        <Double fx:value="-60.0"/>
                    </points>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Polygon>
                <Polygon fill="#fbefdd" onMouseClicked="#moverAbajo" rotate="180.0" scaleX="0.4" scaleY="1.5"
                         stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <points>
                        <Double fx:value="-50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="0.0"/>
                        <Double fx:value="-60.0"/>
                    </points>
                </Polygon>
                <Polygon fill="#fbefdd" onMouseClicked="#moverArribaIzquierda" rotate="315.0" scaleX="0.4" scaleY="0.5"
                         stroke="BLACK" strokeType="INSIDE">
                    <points>
                        <Double fx:value="-50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="0.0"/>
                        <Double fx:value="-60.0"/>
                    </points>
                </Polygon>
                <Polygon fill="#fbefdd" onMouseClicked="#moverArribaDerecha" rotate="45.0" scaleX="0.4" scaleY="0.5"
                         stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="2">
                    <points>
                        <Double fx:value="-50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="0.0"/>
                        <Double fx:value="-60.0"/>
                    </points>
                </Polygon>
                <Polygon fill="#fbefdd" onMouseClicked="#moverAbajoIzquierda" rotate="225.0" scaleX="0.4" scaleY="0.5"
                         stroke="BLACK" strokeType="INSIDE" GridPane.rowIndex="2">
                    <points>
                        <Double fx:value="-50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="0.0"/>
                        <Double fx:value="-60.0"/>
                    </points>
                </Polygon>
                <Polygon fill="#fbefdd" onMouseClicked="#moverAbajoDerecha" rotate="135.0" scaleX="0.4" scaleY="0.5"
                         stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <points>
                        <Double fx:value="-50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="50.0"/>
                        <Double fx:value="40.0"/>
                        <Double fx:value="0.0"/>
                        <Double fx:value="-60.0"/>
                    </points>
                </Polygon>
            </children>
        </GridPane>
        <Button focusTraversable="false" mnemonicParsing="false" onAction="#montar" prefHeight="60.0" prefWidth="300.0"
                stylesheets="/interfaz/botoneras/estiloBoton.css" text="Montar" textFill="WHITE">
            <font>
                <Font size="20.0"/>
            </font>
            <VBox.margin>
                <Insets top="50.0"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>
