<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fx:controller="Interfaz.Controlador">
    <center>
        <GridPane fx:id="pane" onScroll="#crearCasilleros">
        </GridPane>
    </center>
    <bottom>
        <TextArea fx:id="textArea" editable="false" prefHeight="50.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <font>
                <Font size="16.0"/>
            </font>
        </TextArea>
    </bottom>
    <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0"
              text="Scroll actualiza el terreno, Click sobre un casillero proporciona info."
              BorderPane.alignment="CENTER">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>
    </top>
</BorderPane>
